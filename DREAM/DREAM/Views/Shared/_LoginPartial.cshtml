<style>
    .dropdown-menu li p 
    {
        margin-left: 20px;
    }
</style>

@if (Request.IsAuthenticated) {
    <li class="dropdown" id="preview-menu">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">@User.Identity.Name<b class="caret"></b></a>

        <ul class="dropdown-menu">
            <li>
                @Html.ActionLink("Change Password", "ChangePassword", "Users", new { userName = User.Identity.Name, success = true }, htmlAttributes: new { @class = "username", title = "Change Password" })
            </li>
            <li>
                @using (Html.BeginForm("LogOff", "Users", FormMethod.Post, new { id = "logoutForm" })) {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn">Log Out</button>
                }
            </li>
        </ul>
    </li>

} else {
    <li>@Html.ActionLink("Log In", "Login", "Users", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}