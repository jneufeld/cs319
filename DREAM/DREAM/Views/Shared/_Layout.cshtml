<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - DREAM</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrapcss")

        <style>
          body {
            padding-top: 60px; /* ugh */
          }
        </style>

    </head>
    <body>

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>

                    <!--<a class="brand" href="../"><img src="~/Images/BC_Cancer_logo.jpg"></a>-->
                    <a class="brand" href="../">DREAM</a>

                    <div class="nav-collapse collapse" id="main-menu">
                        <ul class="nav" id="main-menu-left">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>

                            @{
                                bool isAdmin = User.IsInRole("Admin");
                                bool isDISpecialist = User.IsInRole("DI Specialist");
                                bool isViewer = User.IsInRole("Viewer");
                                bool isReporter = User.IsInRole("Reporter");
                                
                                if(isDISpecialist) 
                                {
                                    <li>@Html.ActionLink("Create Request", "Add", "Requests")</li>
                                }

                                if (isDISpecialist || isViewer)
                                {
                                    <li>@Html.RouteLink("Search", "Search")</li>
                                }
                                
                                if(isAdmin) 
                                {
                                    <li>@Html.ActionLink("Admin Panel", "Admin", "Home")</li>
                                }
                            }
                        </ul>
                        <ul class="nav pull-right">
                            @Html.Partial("_LoginPartial")
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>

            <footer>
                <center>
                @Html.ActionLink("About", "About", "Home")
                @Html.ActionLink("Contact", "Contact", "Home")
                <p>&copy; @DateTime.Now.Year - DREAM</p>
                </center>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
