@model System.Data.Entity.DbSet

@{
    ViewBag.Title = "Keyword Administration Index";
}

<h2>Keyword Administration</h2>

<style>
    table, td, th {
        padding: 5px; 
        text-align: center;
    }
</style>


@if (Model == null)
{
    <h3>No keywords found in the database </h3>
        }
else
{
            
    <table>
        <tr>
            <th>Word</th>
            <th>Enabled</th>
            <th>Edit</th>
        </tr>

        @foreach (DREAM.Models.Keyword dp in Model)
        {
            <tr onmouseover="ChangeColour(this, true);" onmouseout="ChangeColour(this, false);" onclick="">
                <td>@Html.DisplayFor(d => dp.KeywordText)</td>
               
                 @if (dp.Enabled)
                {
                    <td>@Html.ActionLink("Yes", "ChangeKeywordStatus", new { keywordID = dp.ID, keywordText = dp.KeywordText })</td>                                                  
                 }
                else
                {
                    <td>@Html.ActionLink("No", "ChangeKeywordStatus", new { keywordID = dp.ID, keywordText = dp.KeywordText })</td>
                 }
                <td>@Html.ActionLink("Edit", "Edit", new { keywordText = dp.KeywordText })</td>
            </tr>
        }

    </table>
}


