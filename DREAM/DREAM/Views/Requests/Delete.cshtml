@model DREAM.Models.Request

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="span12">
        <h2>Delete Request</h2>

        <hr />

        <p>Are you sure you want to disable this request?</p>

        <div>
             <b>@Html.DisplayNameFor(model => model.CreationTime)</b>
        </div>
        <div>
            @Html.DisplayFor(model => model.CreationTime)
        </div>

        <div>
             <b>@Html.DisplayNameFor(model => model.CompletionTime)</b>
        </div>
        <div>
            @Html.DisplayFor(model => model.CompletionTime)
        </div>

        <div class="display-label">
             <b>@Html.DisplayNameFor(model => model.CreatedBy)</b>
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.CreatedBy)
        </div>

        <div class="display-label">
             <b>@Html.DisplayNameFor(model => model.ClosedBy)</b>
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.ClosedBy)
        </div>

        @using (Html.BeginForm()) {
            <button type="submit" class="btn btn-danger span4">Disable Request</button>
        }
    </div>
</div>