@model DREAM.Models.Request

@{
    ViewBag.Title = "Edit Request";
}

<h2>Edit Request</h2>

@if (ViewBag.IsLocked)
{
<div class="editor-label">
This request is currently locked and cannot be edited.
</div>
}

@if (!ViewBag.IsLocked)
{
    using (Html.BeginForm()) {

        <fieldset>
            <legend>Request</legend>

            <table>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.ID)
                    </td>
                    <td>
                        @Html.DisplayTextFor(model => model.ID)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.Type)
                    </td>
                    <td>
                        @Html.DropDownList("RequestTypeList")
                        @Html.ValidationMessageFor(model => model.Type.ID)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.CreationTime)
                    </td>
                    <td>
                        @Html.DisplayTextFor(model => model.CreationTime)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.CreatedBy)
                    </td>
                    <td>
                        @ViewBag.CreatedByUsername
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.CompletionTime)
                    </td>
                    <td>
                        @Html.DisplayTextFor(model => model.CompletionTime)
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.LabelFor(model => model.ClosedBy)
                    </td>
                    <td>
                        @ViewBag.ClosedByUsername
                    </td>
                </tr>
            </table>

            <h3>Caller Data</h3>

            @Html.EditorFor(model => model.Caller)

            <h3>Patient Data</h3>
            
            @Html.EditorFor(model => model.Patient)

            @Html.ValidationSummary(true)

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
