@model DREAM.Models.Request

@{
    ViewBag.Title = "Edit Request";
}

<h2>Edit Request</h2>

@if (ViewBag.IsLocked)
{
<div class="editor-label">
This request is currently locked and cannot be edited.
</div>
}

@if (!ViewBag.IsLocked)
{
    using (Html.BeginForm()) {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Request</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.ID)
            </div>
            <div class="editor-field">
                @Html.DisplayTextFor(model => model.ID)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Type.FullName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Type.FullName)
                @Html.ValidationMessageFor(model => model.Type.FullName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CreationTime)
            </div>
            <div class="editor-field">
                @Html.DisplayTextFor(model => model.CreationTime)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CreatedBy)
            </div>
            <div class="editor-field">
                @Html.DisplayTextFor(model => model.CreatedBy)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CompletionTime)
