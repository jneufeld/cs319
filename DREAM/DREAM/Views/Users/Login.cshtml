@model DREAM.Models.LoginModel

@{
    ViewBag.Title = "Drug Information Request and Elicitation Management System";
}

@using (Html.BeginForm("Login", "Users", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginform" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <h2>User Log In</h2>
    <div class="control-group">
        <label class="control-label" for="inputEmail">
            @Html.LabelFor(m => m.UserName)
        </label>
        <div class="controls">
            @Html.TextBoxFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputEmail">
            @Html.LabelFor(m => m.Password)
        </label>
        <div class="controls">
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>

    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </label>
        </div>
    </div>

    <button type="submit" class="btn">Log in</button>

    <p>
    Did you forget your password? <br />

    @Html.ActionLink("Click here to reset it.", "ResetPassword", "Users")
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
}

@section Styles {
    <style>
        #loginform
        {
            margin: 0 auto 20px;
            max-width: 300px;
        }

        #loginform p
        {
            margin-top: 15px;
        }
    </style>
}