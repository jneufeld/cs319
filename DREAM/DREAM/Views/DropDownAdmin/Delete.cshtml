@model DREAM.Models.DropDown

@{
    ViewBag.Title = "Disable/Enable";
}

    @if (Model.Enabled) 
    {
        <h2>Disable</h2>  
    }
    else 
    {
        <h2>Enable</h2>
    }

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        <table border="0">
            <tr>
                <td>            
                    @Html.LabelFor(d => Model.Code)
                </td>
                <td>
                    @Html.DisplayFor(d => Model.Code)
                    @Html.ValidationMessageFor(d => Model.Code)
                </td>
            </tr>
            <tr><td>            
                    @Html.LabelFor(d => Model.FullName)
                </td>
                <td>
                    @Html.DisplayFor(d => Model.FullName)
                    @Html.ValidationMessageFor(d => Model.FullName)
                </td>
            <tr>
                <td>
                    <button type="submit" class="btn span2">Submit</button>
                </td>
            </tr>
        </table>
}
