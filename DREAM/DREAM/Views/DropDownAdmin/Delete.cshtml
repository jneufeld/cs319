@model DREAM.Models.DropDown

@{
    if(Model.Enabled)
    {
        ViewBag.Title = "Disable " + ViewBag.ActiveDropDownAdminClass;
    }
    else
    {
        ViewBag.Title = "Enable " + ViewBag.ActiveDropDownAdminClass;
    }
    Layout = "~/Views/Home/_BaseAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>  

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
        <table border="0">
            <tr>
                <td>            
                    @Html.LabelFor(d => Model.Code)
                </td>
                <td>
                    @Html.DisplayFor(d => Model.Code)
                    @Html.ValidationMessageFor(d => Model.Code)
                </td>
            </tr>
            <tr><td>            
                    @Html.LabelFor(d => Model.FullName)
                </td>
                <td>
                    @Html.DisplayFor(d => Model.FullName)
                    @Html.ValidationMessageFor(d => Model.FullName)
                </td>
            <tr>
                <td>
                    <button type="submit" class="btn span2">Submit</button>
                </td>
            </tr>
        </table>
}

<div>
    @Html.ActionLink("Cancel", "Index", new { dropDownClass=Model.GetType().Name})
</div>