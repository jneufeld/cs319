@model System.Data.Entity.DbSet

@{
    ViewBag.Title = "View";
}

<div class="row">
    <div class="span12">
        <h2>View</h2>
        @Html.ActionLink("Add New Type", "Add", new { dropDownClass = Model.ElementType.Name }, new { @class = "btn btn-primary span2" })
    </div>
</div>

<hr />

<div class="row">
    <div class="span12">
        <table class="table table-striped"> <tr> <th>Code</th> <th>Full Value</th> <th></th> <th></th> </tr>  @if (Model == null) { <tr> <td> NoValues </td> <td> NoValues </td> <td> NoValues </td> <td> NoValues </td> </tr> } else 
        {
            foreach (DREAM.Models.DropDown dp in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(d => dp.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(d => dp.FullName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { dropDownId=dp.ID, dropDownCode=dp.Code, dropDownFullName=dp.FullName, enabled=dp.Enabled, dropDownClass=dp.GetType().Name})
                    </td>
                    <td>
                        @if (dp.Enabled)
                        {
                            @Html.ActionLink("Disable", "Delete", new { dropDownId=dp.ID, dropDownCode=dp.Code, dropDownFullName=dp.FullName, enabled=dp.Enabled, dropDownClass=dp.GetType().Name})
                        }
                        else
                        {
                            @Html.ActionLink("Enable", "Delete", new { dropDownId=dp.ID, dropDownCode=dp.Code, dropDownFullName=dp.FullName, enabled=dp.Enabled, dropDownClass=dp.GetType().Name})
                        }
                    </td>
                </tr>
            }
        }
        </table>
    </div>
</div>

<table>
    <tr>
        <th></th>
    </tr>
    <tr>
            <td>
                @Html.ActionLink("Add New Type", "Add", new { dropDownClass = Model.ElementType.Name }, new { @class = "btn btn-primary span2" })
            </td>
    </tr>
</table>