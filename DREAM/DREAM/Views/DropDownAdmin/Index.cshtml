@model System.Data.Entity.DbSet

@{
    ViewBag.Title = "IndexDropDown";
}

<h2>IndexDropDown</h2>

<table>
    <tr>
        <th>Code</th>
        <th>FullName</th>
        <th></th>
        <th></th>
    </tr>

@if (Model == null)
{
    <tr>
        <td>
            NoValues
        </td>
        <td>
            NoValues
        </td>
        <td>
            NoValues
        </td>
        <td>
            NoValues
        </td>
    </tr>
}
else 
{
    foreach (DREAM.Models.DropDown dp in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(d => dp.Code)
            </td>
            <td>
                @Html.DisplayFor(d => dp.FullName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { dropDownId=dp.ID, dropDownCode=dp.Code, dropDownFullName=dp.FullName, dropDownClass="Regions"})
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { dropDownId=dp.ID, dropDownCode=dp.Code, dropDownFullName=dp.FullName, dropDownClass="Regions"})
            </td>
        </tr>
    }
}
</table>
<table>
    <tr>
        <th></th>
    </tr>
    <tr>
            <td>
                @Html.ActionLink("Add", "Add", new {dropDownClass="Regions"})
            </td>
    </tr>
</table>