@model System.Web.Security.MembershipUserCollection

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table>
    <tr>
        <th>Username</th>
        <th>Email Address</th>
        <th>Enabled</th>
        <th>Is Logged On</th>
        <th></th>
    </tr>

@foreach (MembershipUser user in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(u => user.UserName)
        </td>
        <td>
            @Html.DisplayFor(u => user.Email)
        </td>
        <td>
            @Html.DisplayFor(u => user.IsApproved)
        </td>
        <td>
            @Html.DisplayFor(u => user.IsOnline)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { username = user.UserName })
        </td>
    </tr>
}
</table>

@Html.ActionLink("Add new user", "Register")